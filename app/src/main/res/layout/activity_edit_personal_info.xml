<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.agora.EditPersonalInfo">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:editable="false"
            android:text="Where do your work?"
            android:textAlignment="center"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/enterYourWorkPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter the details..."
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:editable="false"
            android:text="What are your interests?"
            android:background="@android:color/transparent"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/enterYourInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your interests..."
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:singleLine="false"
            android:editable="false"
            android:text="Tell something about yourself"
            android:background="@android:color/transparent"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/tellSomethingAboutYourself"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_centerInParent="true"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="left"
            android:hint="People will know you better!"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/bt_infosubmitbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp"
            android:onClick="submitInfo"
            android:text="Submit" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
